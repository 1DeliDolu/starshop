{% extends 'base.html.twig' %}

{% block title %}Symfony Uygulaması{% endblock %}


{% block body %}
    <h1>{{ 'Hoşgeldin' }}</h1>


    <div  style="overflow-x:auto; margin-top:2rem;">
        <table class="modern-table">
            <thead>
                <tr>
                    <th>İsim</th>
                    <th>Sınıf</th>
                    <th>Kaptan</th>
                    <th>Durum</th>
                </tr>
            </thead>
            <tbody>
                {% for ship in ships %}
                <tr>
                    <td>
                        <a href="{{ path('starship_show', {'id': ship.id}) }}" class="table-link">
                            {{ ship.name }}
                        </a>
                    </td>
                    <td>{{ ship.class }}</td>
                    <td>{{ ship.captain|upper }}</td>
                    <td>{{ ship.status }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <style>
    .modern-table {
        width: 100%;
        border-collapse: collapse;
        box-shadow: 0 2px 8px rgba(0,0,0,0.07);
        background: #fff;
        font-family: 'Segoe UI', 'Roboto', Arial, sans-serif;
        font-size: 1rem;
        margin-bottom: 2rem;
        border-radius: 8px;
        overflow: hidden;
    }
    .modern-table th {
        background: #f5f5f5;
        padding: 14px 12px;
        text-align: left;
        border-bottom: 2px solid #e0e0e0;
        font-weight: 600;
        color: #333;
    }
    .modern-table td {
        padding: 12px 12px;
        border-bottom: 1px solid #e0e0e0;
        color: #444;
        transition: background 0.2s;
    }
    .modern-table tr:hover td {
        background: #eaf6ff;
    }
    .modern-table tr:nth-child(even) td {
        background: #f9f9f9;
    }
    .table-link {
        color: #1976d2;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s;
    }
    .table-link:hover {
        color: #004ba0;
        text-decoration: underline;
    }
    </style>
{% endblock %}


