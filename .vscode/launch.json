{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Markdownlint: Lint Markdown Files",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/markdownlint-cli2/markdownlint-cli2.cjs",
            "args": [
                "**/*.md"
            ],
            "console": "integratedTerminal",
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}
